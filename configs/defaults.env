# Server Security Toolkit - Default Configuration
# Этот файл содержит настройки по умолчанию для автоматизации процесса безопасности

# SSH Configuration
SSH_NEW_PORT=2200                    # Новый SSH порт (рекомендуется изменить)
SSH_DISABLE_PASSWORD_AUTH=true       # Отключить парольную авторизацию
SSH_DISABLE_ROOT_LOGIN=true          # Отключить root вход
SSH_AUTO_UPDATE_UFW=true             # Автоматически обновлять UFW при смене порта

# System Hardening
INSTALL_FAIL2BAN=true                # Установить fail2ban
CONFIGURE_FAIL2BAN_BASIC=true        # Базовая конфигурация fail2ban (sshd jail)
INSTALL_UNATTENDED_UPGRADES=true     # Установить автоматические обновления
INSTALL_CROWDSEC=false               # Установить CrowdSec (опционально)
INSTALL_CROWDSEC_BOUNCER=false       # Установить CrowdSec Firewall Bouncer

# Firewall Configuration  
SETUP_BASIC_FIREWALL=true            # Настроить базовый файрвол UFW
ALLOW_HTTP=true                      # Разрешить HTTP (порт 80)
ALLOW_HTTPS=true                     # Разрешить HTTPS (порт 443)

# Logging and Safety
VERBOSE_LOGGING=true                 # Подробное логирование
CREATE_BACKUPS=true                  # Создавать резервные копии конфигураций
CONFIRM_BEFORE_CHANGES=true          # Запрашивать подтверждение перед изменениями

# Public Key Import (optional)
# Если указан, будет автоматически импортирован в authorized_keys
PUBLIC_KEY_PATH=""                   # Путь к файлу публичного ключа (.pub)
PUBLIC_KEY_CONTENT=""                # Или содержимое публичного ключа напрямую

# Multi-server deployment (future feature)
SERVER_LIST=""                       # Список серверов для массового развертывания
