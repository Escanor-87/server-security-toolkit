{
    "terminal.integrated.defaultProfile.linux": "bash",
    "shellcheck.enable": true,
    "shellcheck.run": "onType",
    "files.associations": {
        "*.sh": "shellscript"
    },
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.rulers": [80, 120],
    "files.exclude": {
        "logs/": true
    }
}
